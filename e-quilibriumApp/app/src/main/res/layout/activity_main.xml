<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.sirdreadlocks.e_quilibrium.MainActivity">

    <Button
        android:text="New Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNewPat"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="Existing Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnExtPat"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNewPat"
        app:layout_constraintLeft_toLeftOf="@+id/btnNewPat"
        app:layout_constraintRight_toRightOf="@+id/btnNewPat" />

    <Button
        android:text="List Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnListPat"
        app:layout_constraintTop_toBottomOf="@+id/btnExtPat"
        app:layout_constraintLeft_toLeftOf="@+id/btnExtPat"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/btnExtPat" />

    <Button
        android:text="Sign Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignOut"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>